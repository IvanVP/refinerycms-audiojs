<%= form_for [refinery, :audios_admin, @audio] do |f| %>
    <%= render '/refinery/admin/error_messages',
               :object              => @audio,
               :include_object_name => true %>

    <div class='field'>
      <%= f.label t('.title') %>
      <%= f.text_field :title, :required => true  %>
    </div>
    <%= render 'file_fields', :f => f %>

    <%= render('form_option_fields', :f => f) %>

    <%= render '/refinery/admin/form_actions',
               :f                   => f,
               :continue_editing    => false,
               :delete_title        => t('delete', :scope => 'refinery.audios.admin.audios.audio'),
               :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @audio.title) %>
<% end %>
